            // ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛
            //                                     ┃           ┃    GIF    ┃    ADJ    ┃   ┃           ┃           ┃           ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
        &trans  &kp C_VOL_DN          &kp C_MUTE        &kp C_VOLUME_UP       &trans    &trans  &kp PAGE_DOWN  &kp UP_ARROW  &kp PAGE_UP  &trans
        &trans  &kp C_PREVIOUS        &kp C_PLAY_PAUSE  &kp C_NEXT            &trans    &trans  &kp LEFT       &kp DOWN      &kp RIGHT    &trans
&trans  &trans  &kp C_BRIGHTNESS_DEC  &trans            &kp C_BRIGHTNESS_INC  &trans    &kp H   &kp J          &kp K         &kp L        &trans  &trans
                                      &trans            &trans                &trans    &trans  &trans         &trans
            >;
